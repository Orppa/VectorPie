<theme>

    <formatVersion>4</formatVersion>
    <include>./vectorpie.xml</include>

     <view name="system, basic, detailed, video">

        <image name="logo">
            <path>./_ass/images/logo.svg</path>
        </image>

    </view>

    <view name="system, detailed, video">

        <image name="console_overlay" extra="true">
            <path>./_ass/images/console.png</path>
        </image>

    </view>

    <view name="system">

        <image name="background" extra="true">
            <path>./_ass/images/background.png</path>
        </image>

    </view>

    <view name="basic, detailed, video">

        <image name="detailed_background" extra="true">
            <path>./_ass/images/backgroundsys.png</path>
        </image>

    </view>

    <view name="basic">

        <image name="basic_background" extra="true">
            <path>./_ass/images/basicbg.png</path>
        </image>

        <image name="logo" extra="true">
            <origin>0.5 0.5</origin>
            <pos>.5 .095</pos>
            <maxSize>0.337 0.156</maxSize>
        </image>

            <text name="logoText">
                <size>0.337 0.156</size>
                <origin>0.5 0.5</origin>
                <pos>.5 .095</pos>
                <color>00000000</color>
            </text>

    </view>

    <view name="detailed, video">

        <image name="logo" extra="true">
            <pos>0.196 0.128</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.337 0.156</maxSize>
        </image>

            <text name="logoText">
                <size>0.337 0.156</size>
                <pos>0.196 0.128</pos>
                <origin>0.5 0.5</origin>
                <color>00000000</color>
            </text>

        <text name="system_desc" extra="true">
            <text></text>
        </text>

    </view>
    
</theme>