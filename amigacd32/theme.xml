<theme>

    <formatVersion>4</formatVersion>
    <include>./../vectorpie.xml</include>

     <view name="system, basic, detailed, video">

        <image name="logo">
            <path>./logo.svg</path>
        </image>

    </view>

    <view name="system, detailed, video">

        <image name="console_overlay" extra="true">
            <path>./console.png</path>
        </image>

    </view>

    <view name="system">

        <image name="background" extra="true">
            <path>./system1.png</path>
        </image>

    </view>

    <view name="basic, detailed, video">

        <image name="detailed_background" extra="true">
            <path>./system2.png</path>
        </image>

        <helpsystem name="help">
            <textColor>000000</textColor>
            <iconColor>000000</iconColor>
        </helpsystem>

    </view>

    <view name="basic">

        <image name="basic_background" extra="true">
            <path>./../_ass/images/basicbg.png</path>
        </image>

    </view>

    <view name="detailed, video">

        <text name="system_desc" extra="true">
            <text>The Amiga CD32 was released in Europe on September 17, 1993. It displayed a resolution of 320×256 to 1280×512i (PAL).</text>
        </text>

    </view>
    
</theme>